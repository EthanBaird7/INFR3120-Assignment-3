<!DOCTYPE html>
<html>
  <%- include("partials/header") %>

  <body>
    <div class="container mt-5">
      <h2>Add New Workout</h2>

      <!-- Form to create a new workout -->
      <form action="/workouts/add" method="POST">
        <div class="mb-3">
          <label class="form-label">Exercise Name</label>
          <input type="text" name="exercise" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Muscle Group</label>
          <input type="text" name="muscleGroup" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Sets</label>
          <input type="number" name="sets" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Reps</label>
          <input type="number" name="reps" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label">Date</label>
          <input type="date" name="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Add Workout</button>
        <a href="/workouts" class="btn btn-secondary">Cancel</a>
      </form>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
